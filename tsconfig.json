{
	"ts-node": {
        "require": ["tsconfig-paths/register"]
    },
	"compilerOptions": {
	  "target": "es2016",
	  "module": "commonjs",                                
	  "rootDir": "./",
	  "baseUrl": "./src",
		"paths": {
		"@presentation/*": ["presentation/*"],
		"@domain/*": ["domain/*"],
		"@utils/*": ["utils/*"],
		"@data/*": ["data/*"],
		"@infra/*": ["infra/*"],
		"@main/*": ["main/*"]
	  },                   
	  "esModuleInterop": true,                             
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,                
	  "skipLibCheck": true                             
	}
  }